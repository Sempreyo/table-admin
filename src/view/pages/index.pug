extends ../layouts/default

block vars
	-
		const page = {
			title: 'Table-admin'
		};

block main
	section.table
		.container
			.table__sticky-menu
				.table__create
					label Количество строк
						input.table__num-rows(type='number', min='1')
					label Количество столбцов
						input.table__num-columns(type='number', min='1')
					button.btn.btn-primary.btn-small.js-create-table Добавить
				.table__panel(hidden)
					button.btn.btn-primary.btn-small.js-create-row Добавить строку
					button.btn.btn-primary.btn-small.js-create-column Добавить столбец
					button.btn.btn-primary.btn-small.js-join-cells Разделить ячейки
			.table__wrapper
